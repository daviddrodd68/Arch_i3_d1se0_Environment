{
  "name": "figma-mobile-design-workflow",
  "version": "1.0.0",
  "description": "Mobile app design workflow that integrates with Figma for automated design-to-code generation",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "build": "npm run build:generators && npm run build:tokens",
    "build:generators": "node src/scripts/build-generators.js",
    "build:tokens": "node src/scripts/extract-tokens.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/",
    "format": "prettier --write src/",
    "setup:mcp": "node src/scripts/setup-mcp.js",
    "generate:react-native": "node src/cli/generate.js --platform=react-native",
    "generate:flutter": "node src/cli/generate.js --platform=flutter",
    "generate:swiftui": "node src/cli/generate.js --platform=swiftui",
    "generate:compose": "node src/cli/generate.js --platform=compose",
    "sync:figma": "node src/scripts/sync-figma.js",
    "extract:tokens": "node src/scripts/extract-design-tokens.js"
  },
  "keywords": [
    "figma",
    "mobile",
    "design-to-code",
    "react-native",
    "flutter",
    "swiftui",
    "jetpack-compose",
    "design-tokens",
    "mcp",
    "laravel"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "figma-api": "^1.11.0",
    "fs-extra": "^11.1.1",
    "handlebars": "^4.7.8",
    "lodash": "^4.17.21",
    "node-fetch": "^3.3.2",
    "prettier": "^3.1.0",
    "sharp": "^0.32.6",
    "ws": "^8.14.2",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/figma-mobile-design-workflow.git"
  }
}
